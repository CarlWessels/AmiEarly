<configuration>
  <bindings>
    <!--<netTcpBinding>
      <binding name="SecureService_Tcp">
        <security mode="Transport">
          <transport clientCredentialType="Windows"
                     protectionLevel="EncryptAndSign" />
          <message clientCredentialType="Windows" />
